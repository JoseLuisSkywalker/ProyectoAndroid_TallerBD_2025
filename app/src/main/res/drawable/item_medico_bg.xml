<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo degradado -->
    <gradient
        android:startColor="#610808"
        android:endColor="#BD6767"
        android:angle="45"/>

    <!-- Bordes redondeados -->
    <corners android:radius="12dp"/>

    <!-- Sombra interna opcional simulada con padding y color mÃ¡s oscuro -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>

    <!-- Contorno del item -->
    <stroke
        android:width="1dp"
        android:color="#FFFFFF"/>
</shape>